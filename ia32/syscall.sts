defasm sys_exit
    # b8 ?' # 1 ?.             ; mov eax, 1
    # 31 ?' # db ?'            ; xor ebx, ebx
    # cd ?' # 80 ?'            ; int 0x80
; no need in next since this is the last instruction

_data_segment ?choose
