    # 31 ?' # db ?'            ; xor ebx, ebx
    # b9 ?' _iobuf ?.          ; mov ecx, _iobuf
    # ba ?' # 1 ?.             ; mov edx, 1
    # cd ?' # 80 ?'            ; int 0x80
    # 31 ?' # db ?'            ; xor ebx, ebx
    # 8a ?' # 1d ?' _iobuf ?.  ; mov bl, [_iobuf]
    # 53 ?'                    ; push ebx
    # 50 ?'                    ; push eax
next

defasm sys_write
