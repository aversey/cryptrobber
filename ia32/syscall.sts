    # a2 ?' _iobuf ?.          ; mov [_iobuf], al
    # b8 ?' # 4 ?.             ; mov eax, 4
    # bb ?' # 1 ?.             ; mov ebx, 1
    # b9 ?' _iobuf ?.          ; mov ecx, _iobuf
    # ba ?' # 1 ?.             ; mov edx, 1
